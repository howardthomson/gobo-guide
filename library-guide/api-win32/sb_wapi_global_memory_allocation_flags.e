	GMEM_DISCARDED      : INTEGER_32 = 0x00004000	--	 100000000000000B; -- 0x4000
	GMEM_LOCKCOUNT      : INTEGER_32 = 0x000000FF	--	        11111111B; -- 0x00FF

end
